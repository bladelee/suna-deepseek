# WSL2 + Docker Desktop 环境配置示例
# 复制此文件到 .env 并根据需要修改

# 环境模式
ENV_MODE=local

# 启用本地Docker沙盒
USE_LOCAL_DOCKER_SANDBOX=true

# WSL2 + Docker Desktop 配置
# Docker Desktop 需要启用 "Expose daemon on tcp://localhost:2375 without TLS"
DOCKER_HOST=tcp://localhost:2375
DOCKER_TLS_VERIFY=false

# 或者使用环境变量自动检测（推荐）
# DOCKER_HOST=
# DOCKER_TLS_VERIFY=false

# 沙盒镜像配置
SANDBOX_IMAGE_NAME=kortix/suna:0.1.3.6
SANDBOX_SNAPSHOT_NAME=kortix/suna:0.1.3.6
SANDBOX_ENTRYPOINT=/usr/bin/supervisord -n -c /etc/supervisor/conf.d/supervisord.conf

# Supabase配置
SUPABASE_URL=your_supabase_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Redis配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_SSL=false

# LLM API密钥（至少需要一个）
ANTHROPIC_API_KEY=your_anthropic_api_key
OPENAI_API_KEY=your_openai_api_key
GROQ_API_KEY=your_groq_api_key
DEEPSEEK_API_KEY=your_deepseek_api_key

# 其他API密钥
TAVILY_API_KEY=your_tavily_api_key
RAPID_API_KEY=your_rapid_api_key
FIRECRAWL_API_KEY=your_firecrawl_api_key

# 可选：Daytona配置（当Docker沙盒不可用时作为备选）
# DAYTONA_API_KEY=
# DAYTONA_SERVER_URL=
# DAYTONA_TARGET=

