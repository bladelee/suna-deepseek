# Local Docker Sandbox Configuration Example
# Copy this file to .env and modify as needed

# Environment mode
ENV_MODE=local

# Enable local Docker sandbox instead of Daytona
USE_LOCAL_DOCKER_SANDBOX=true

# Docker configuration (optional, uses default if not set)
# DOCKER_HOST=unix:///var/run/docker.sock
# DOCKER_CERT_PATH=
# DOCKER_TLS_VERIFY=false

# Sandbox image configuration
SANDBOX_IMAGE_NAME=kortix/suna:0.1.3.6
SANDBOX_SNAPSHOT_NAME=kortix/suna:0.1.3.6
SANDBOX_ENTRYPOINT=/usr/bin/supervisord -n -c /etc/supervisor/conf.d/supervisord.conf

# Supabase configuration
SUPABASE_URL=your_supabase_url
SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Redis configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_SSL=false

# LLM API keys (at least one is required)
ANTHROPIC_API_KEY=your_anthropic_api_key
OPENAI_API_KEY=your_openai_api_key
GROQ_API_KEY=your_groq_api_key
DEEPSEEK_API_KEY=your_deepseek_api_key

# Other API keys
TAVILY_API_KEY=your_tavily_api_key
RAPID_API_KEY=your_rapid_api_key
FIRECRAWL_API_KEY=your_firecrawl_api_key

# Optional: Daytona configuration (will be ignored when USE_LOCAL_DOCKER_SANDBOX=true)
# DAYTONA_API_KEY=
# DAYTONA_SERVER_URL=
# DAYTONA_TARGET=
